<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRScanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_dark</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="mainSheetIconColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.QRScanner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/semiTransparentWhite</item>
        <item name="colorAccent">?attr/colorSecondaryVariant</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="StraightLineDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/semiTransparentWhite</item>
    </style>

    <style name="SemiTransparentTextColor">
        <item name="android:textColor">@color/semiTransparentWhite</item>
    </style>


    <style name="SemiTransparentBackground">
        <item name="android:background">@color/semiTransparentWhite</item>
    </style>

</resources>